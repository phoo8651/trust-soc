  -H "Authorization: Bearer ${LOCAL_TOKEN}" \
  -H "Content-Type: application/json" \
  -d '{
    "resourceLogs": [{
      "scopeLogs": [{
        "logRecords": [{
          "timeUnixNano": 1732900000000000000,
          "body": { "stringValue": "✅ OTLP → ingest/logs 수동 테스트 로그입니다." }
        }]
      }]
    }]
  }'
